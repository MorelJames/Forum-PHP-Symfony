<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
    </head>
    <body>
        {% block header %}
            <div class = "menuHeader">
                <a href="{{ path('app_allCategory') }}",
                    class="{% if (app.request.pathInfo == path('app_allCategory')
                    or '/Category/' in app.request.pathInfo) %} active{% endif %}"
                    ><p>Category</p></a>

                <a href="{{ path('app_allPostAdmin') }}",
                    class="{% if (app.request.pathInfo == path('app_allPostAdmin')) %} active{% endif %}"
                    ><p>All posts</p></a>
                <a href="{{ path('app_userdashboard') }}",
                    class="{% if (app.request.pathInfo == path('app_userdashboard')) %} active{% endif %}">
                <p>My dashboard</p></a>

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admindashboard') }}",
                        class="{% if (app.request.pathInfo == path('app_admindashboard')
                        or app.request.pathInfo == path('app_adminMangeUserRole')
                        or app.request.pathInfo == path('app_signaledPosts')
                        or app.request.pathInfo == path('app_signaledComments')) %} active{% endif %}">
                    <p>Admin dashboard</p></a>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('app_logout') }}">Log out</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Log in</a>
                {% endif %}
                
            </div>
        {% endblock %}
        
        {% block body %}{% endblock %}
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    </body>
</html>
