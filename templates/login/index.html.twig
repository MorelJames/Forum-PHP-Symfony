{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

    <h1>SignIn</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" name="login_form">
        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email">

        <input type="password" id="password" name="_password" placeholder="Password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit">login</button>
    </form>

    <a href="{{ path('app_register') }}" class="registerLink"><p>Resgister</p></a>
{% endblock %}
